<%# 上部バー部分 %>

<div class='header'>
  <%= link_to 'トップページ', "/", class: "header-left" %>
  <%= link_to 'ジャンル', "#", class: "header-left" %>
  <% if user_signed_in? %>
    <%= link_to '投稿する', new_post_path, class: "header-left" %>
  <% end %>
  <%= form_with(url: "#", local: true, method: :get, class: "search-form") do |f| %>
    <%= f.text_field :keyword, class:'input-box', placeholder: 'キーワードから探す' %>
    <button class="search-button">
      <%= image_tag "search.png", class:"search-icon" %>
    </button>
  <% end %>
  <ul class='user-management'>
    <% if user_signed_in? %>
      <li><%= link_to current_user.nickname, "#", class: "user-nickname" %></li>
      <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout btn btn-danger" %></li>
    <% else %>
      <li><%= link_to 'ログイン', new_user_session_path, class: "login btn btn-primary" %></li>
      <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up btn btn-success" %></li>
    <% end %>
  </ul>
</div>

